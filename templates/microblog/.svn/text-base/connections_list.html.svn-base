{% load i18n %}

<ul>
    {% for connection in connections %}
    <li>
    <a href="{{ connection.friend.get_absolute_url }}">{{ connection.friend }}</a>

    {% if connections_show_actions %}
    <br/>

    {{ connection.get_status_display }}

    {% ifnotequal connection.status "a" %}
        <a href="{{ connection.get_absolute_url }}accept/">{% trans "Accept" %}</a>
    {% endifnotequal %}

    {% ifnotequal connection.status "b" %}
        <a href="{{ connection.get_absolute_url }}block/">{% trans "Block" %}</a>
    {% endifnotequal %}

    <a href="{{ connection.get_absolute_url }}delete/">{% trans "Delete" %}</a>
    {% endif %}
    </li>
    {% endfor %}
</ul>

